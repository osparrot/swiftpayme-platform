# SwiftPayMe Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_PASSWORD=your-secure-mongodb-password
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production-min-32-chars

# Bitcoin Configuration
BITCOIN_NETWORK=testnet
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASSWORD=your-secure-bitcoin-rpc-password
BITCOIN_WALLET_NAME=swiftpayme_wallet

# Blockchain Configuration
BLOCKCHAIN_NETWORK=testnet
ETHEREUM_RPC_URL=https://goerli.infura.io/v3/your-infura-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key-for-token-operations
TOKEN_CONTRACT_ADDRESS=your-deployed-token-contract-address

# External API Keys
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
FIXER_API_KEY=your-fixer-api-key
CURRENCYLAYER_API_KEY=your-currencylayer-api-key
GOLD_API_KEY=your-gold-price-api-key
SILVER_API_KEY=your-silver-price-api-key
DIAMOND_API_KEY=your-diamond-price-api-key

# Notification Service Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@swiftpayme.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Compliance Service Configuration
JUMIO_API_TOKEN=your-jumio-api-token
JUMIO_API_SECRET=your-jumio-api-secret
CHAINALYSIS_API_KEY=your-chainalysis-api-key

# Message Queue Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-rabbitmq-password

# Development/Testing Configuration
NODE_ENV=development
LOG_LEVEL=debug

