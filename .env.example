# SwiftPayMe Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_PASSWORD=your-secure-mongodb-password
REDIS_PASSWORD=your-secure-redis-password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-must-be-long-and-random
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production-must-be-long-and-random
MASTER_ENCRYPTION_KEY=your-32-byte-encryption-key-change-this-must-be-exactly-32-bytes-long

# Bitcoin Configuration
BITCOIN_NETWORK=testnet
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASSWORD=your-secure-bitcoin-rpc-password
BITCOIN_RPC_HOST=bitcoin-node
BITCOIN_RPC_PORT=18332
BITCOIN_WALLET_NAME=swiftpayme_wallet

# External API Keys - Currency and Pricing
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
FIXER_API_KEY=your-fixer-api-key
CURRENCYLAYER_API_KEY=your-currencylayer-api-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# Precious Metals API Keys
METALS_API_KEY=your-metals-api-key
GOLD_API_KEY=your-gold-api-key
SILVER_API_KEY=your-silver-api-key
DIAMOND_API_KEY=your-diamond-api-key

# Email Configuration (Choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@swiftpayme.com

# SMTP (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# Push Notifications
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# Slack Integration (Optional)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Development/Testing Settings
NODE_ENV=production
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
FILE_UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Bitcoin Settings
MIN_CONFIRMATIONS=3
TRANSACTION_FEE_RATE=10

# Cache Settings
CACHE_TTL=300
RATE_UPDATE_INTERVAL=60000

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30

# JWT Settings
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

