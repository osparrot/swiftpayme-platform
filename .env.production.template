# SwiftPayMe Platform - Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Application Settings
APP_VERSION=1.3.0
NODE_ENV=production
LOG_LEVEL=info

# Domain Configuration
DOMAIN=swiftpayme.com
API_DOMAIN=api.swiftpayme.com
APP_DOMAIN=app.swiftpayme.com
ADMIN_DOMAIN=admin.swiftpayme.com

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
ENCRYPTION_KEY=your-encryption-key-32-characters-long
API_KEY_SECRET=your-api-key-secret-32-characters-long
WALLET_ENCRYPTION_KEY=your-wallet-encryption-key-32-chars
SEED_ENCRYPTION_KEY=your-seed-encryption-key-32-chars

# Database Passwords (CHANGE THESE IN PRODUCTION!)
MONGODB_PASSWORD=your-secure-mongodb-password
REDIS_PASSWORD=your-secure-redis-password

# Bitcoin Core Configuration
BITCOIN_NETWORK=mainnet
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASSWORD=your-secure-bitcoin-rpc-password

# Lightning Network Configuration
LIGHTNING_ENABLED=true

# Service Worker Configuration
API_WORKERS=4
USER_WORKERS=2
CRYPTO_WORKERS=2

# External Service API Keys
KYC_PROVIDER_API_KEY=your-kyc-provider-api-key
EMAIL_SERVICE_API_KEY=your-email-service-api-key
SMS_SERVICE_API_KEY=your-sms-service-api-key

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/swiftpayme.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/swiftpayme.com.key
SSL_CHAIN_PATH=/etc/nginx/ssl/swiftpayme.com.chain.crt

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=swiftpayme-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@swiftpayme.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@swiftpayme.com

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Asset Verification Services
PRECIOUS_METALS_API_KEY=your-precious-metals-api-key
DIAMOND_VERIFICATION_API_KEY=your-diamond-verification-api-key
ASSET_STORAGE_PROVIDER_API_KEY=your-asset-storage-api-key

# Compliance and Regulatory
AML_PROVIDER_API_KEY=your-aml-provider-api-key
SANCTIONS_SCREENING_API_KEY=your-sanctions-screening-api-key
TAX_REPORTING_API_KEY=your-tax-reporting-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGINS=https://swiftpayme.com,https://app.swiftpayme.com,https://admin.swiftpayme.com

# Session Configuration
SESSION_SECRET=your-session-secret-32-characters-long
SESSION_TIMEOUT=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Notification Configuration
PUSH_NOTIFICATION_KEY=your-push-notification-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
SEGMENT_WRITE_KEY=your-segment-write-key

# CDN Configuration
CDN_URL=https://cdn.swiftpayme.com
CDN_API_KEY=your-cdn-api-key

# Search Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Feature Flags
FEATURE_BITCOIN_ENABLED=true
FEATURE_LIGHTNING_ENABLED=true
FEATURE_ASSET_TOKENIZATION=true
FEATURE_MULTI_CURRENCY=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_COMPLIANCE_MONITORING=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
CONNECTION_POOL_SIZE=10

# Security Configuration
HELMET_ENABLED=true
TRUST_PROXY=true
SECURE_COOKIES=true
CSRF_PROTECTION=true

# Logging Configuration
LOG_FORMAT=json
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_COMPRESS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Service Discovery Configuration
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_URL=http://consul:8500

# Load Balancing Configuration
LOAD_BALANCER_STRATEGY=round_robin
LOAD_BALANCER_HEALTH_CHECK=true

# Auto Scaling Configuration
AUTO_SCALING_ENABLED=false
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=10
AUTO_SCALING_TARGET_CPU=70

# Disaster Recovery Configuration
DR_ENABLED=true
DR_BACKUP_FREQUENCY=daily
DR_REPLICATION_ENABLED=true
DR_FAILOVER_TIMEOUT=300

# Compliance Configuration
GDPR_ENABLED=true
CCPA_ENABLED=true
PCI_DSS_ENABLED=true
SOX_ENABLED=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION=2555
AUDIT_ENCRYPTION=true

# Data Retention Configuration
DATA_RETENTION_ENABLED=true
DATA_RETENTION_PERIOD=2555
DATA_ANONYMIZATION=true
