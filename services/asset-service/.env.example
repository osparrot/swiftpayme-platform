# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
SERVICE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/swiftpay_assets
DB_POOL_SIZE=10
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys
INTERNAL_SERVICE_SECRET=your-internal-service-secret-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.swiftpay.com

# Logging Configuration
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIRECTORY=./logs

# Fluentd Configuration
FLUENTD_ENABLED=false
FLUENTD_HOST=localhost
FLUENTD_PORT=24224

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
MAX_REQUEST_SIZE=10mb
SHUTDOWN_TIMEOUT=10000

# External Services
CURRENCY_CONVERSION_SERVICE_URL=http://localhost:3002
COMPLIANCE_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
ACCOUNT_SERVICE_URL=http://localhost:3006

# Asset Price APIs
GOLD_PRICE_API_URL=https://api.metals.live/v1/spot/gold
SILVER_PRICE_API_URL=https://api.metals.live/v1/spot/silver
CRYPTO_PRICE_API_URL=https://api.coingecko.com/api/v3
PRICE_API_KEY=your-price-api-key

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Wallet Configuration
DEFAULT_WALLET_LIMIT=10
MAX_WALLET_LIMIT=100
WALLET_ADDRESS_PREFIX=sp_

# Asset Configuration
SUPPORTED_ASSETS=XAU,XAG,BTC,ETH
DEFAULT_CURRENCY=USD
PRICE_UPDATE_INTERVAL=60000

# Compliance Configuration
KYC_REQUIRED=true
AML_CHECKS_ENABLED=true
TRANSACTION_MONITORING=true

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# Development Configuration
DEBUG=swiftpay:asset-service
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# FLUENTD_ENABLED=true
# MOCK_EXTERNAL_SERVICES=false
# ENABLE_SWAGGER=false

