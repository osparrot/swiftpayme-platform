# Server Configuration
NODE_ENV=development
PORT=3000
SERVICE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/swiftpay_users
DB_POOL_SIZE=10
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=swiftpay-user-service
JWT_AUDIENCE=swiftpay-users

# Password Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_HISTORY_COUNT=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_RESPONSE_BODY=false

# Fluentd Configuration
FLUENTD_ENABLED=false
FLUENTD_HOST=localhost
FLUENTD_PORT=24224

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@swiftpay.com
EMAIL_FROM_NAME=Swiftpay

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Two-Factor Authentication
TWO_FACTOR_ISSUER=Swiftpay
TWO_FACTOR_WINDOW=2
BACKUP_CODES_COUNT=10

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/
MAX_FILES_PER_UPLOAD=5

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
HELMET_CSP_ENABLED=true
TRUST_PROXY=true

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# API Key Configuration
API_KEY_LENGTH=32
API_KEY_PREFIX=sp_
API_KEY_DEFAULT_EXPIRES_DAYS=365

# Verification Configuration
EMAIL_VERIFICATION_EXPIRES_HOURS=24
PHONE_VERIFICATION_EXPIRES_MINUTES=10
PASSWORD_RESET_EXPIRES_HOURS=1
VERIFICATION_CODE_LENGTH=6

# Account Configuration
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
ACCOUNT_DELETION_GRACE_PERIOD_DAYS=30
INACTIVE_ACCOUNT_THRESHOLD_DAYS=365

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true

# External Services
ACCOUNT_SERVICE_URL=http://localhost:3001
TRANSACTION_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
COMPLIANCE_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# Audit Configuration
AUDIT_LOGGING_ENABLED=true
AUDIT_RETENTION_DAYS=2555
SECURITY_MONITORING_ENABLED=true
SECURITY_WEBHOOK_URL=

# Development Configuration
DEBUG=false
PRETTY_LOGS=true
MOCK_EXTERNAL_SERVICES=false

# Server Timeouts
SERVER_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=10000
MAX_REQUEST_SIZE=10mb

# Clustering
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# Graceful Shutdown
SHUTDOWN_TIMEOUT=10000
SHUTDOWN_SIGNALS=SIGTERM,SIGINT

# Feature Flags
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_API_KEYS=true
FEATURE_DOCUMENT_UPLOAD=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_BIOMETRIC_AUTH=false
FEATURE_ADVANCED_SECURITY=true

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555
ANONYMIZATION_ENABLED=true

# Performance
CACHE_TTL_SECONDS=300
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_MS=5000
BULK_OPERATION_LIMIT=1000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3://your-backup-bucket

