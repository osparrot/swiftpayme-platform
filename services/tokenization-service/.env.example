# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
SERVICE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/swiftpay-tokenization
MONGODB_OPTIONS={}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
MAX_REQUEST_SIZE=10mb
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_RESPONSE_BODY=false
FLUENTD_HOST=localhost
FLUENTD_PORT=24224

# External Services
COMPLIANCE_SERVICE_URL=http://compliance-service:3000
ACCOUNT_SERVICE_URL=http://account-service:3000
TRANSACTION_SERVICE_URL=http://transaction-service:3000
ANALYTICS_SERVICE_URL=http://analytics-service:3000
NOTIFICATION_SERVICE_URL=http://notification-service:3000
CURRENCY_SERVICE_URL=http://currency-conversion-service:3000
ASSET_SERVICE_URL=http://asset-service:3000

# Service Authentication
SERVICE_TOKEN=your-service-to-service-authentication-token

# Tokenization Configuration
MIN_MINT_AMOUNT=0.001
MAX_MINT_AMOUNT=1000000
MIN_BURN_AMOUNT=0.001
MAX_BURN_AMOUNT=1000000
MINTING_FEE=0.001
BURNING_FEE=0.001
RESERVE_RATIO=1.0
AUDIT_FREQUENCY=30

# Compliance Configuration
COMPLIANCE_CHECKS=KYC,AML,SANCTIONS
CUSTODY_PROVIDERS=BRINKS,LOOMIS,MALCA_AMIT

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@swiftpay.com

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Blockchain Configuration (if applicable)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
GAS_LIMIT=200000
GAS_PRICE=20000000000

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=swiftpay-tokenization-documents

# Development Configuration
DEBUG=swiftpay:*
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/swiftpay-tokenization-test
TEST_REDIS_DB=1

