{
  "name": "swiftpayme-admin-service",
  "version": "1.0.0",
  "description": "SwiftPayMe Admin Service - Administrative interface for system management, asset verification, and user administration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t swiftpayme-admin-service .",
    "docker:run": "docker run -p 3008:3008 swiftpayme-admin-service"
  },
  "keywords": [
    "swiftpayme",
    "admin",
    "management",
    "verification",
    "monitoring",
    "microservice",
    "nodejs",
    "typescript",
    "express",
    "fintech",
    "assets",
    "crypto",
    "bitcoin"
  ],
  "author": "SwiftPayMe Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "decimal.js": "^10.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "cookie-parser": "^1.4.6",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.10.0",
    "rate-limit-redis": "^4.0.1",
    "joi": "^17.9.2",
    "axios": "^1.5.0",
    "async-retry": "^1.3.3",
    "uuid": "^9.0.0",
    "prom-client": "^14.2.0",
    "@fluent-org/logger": "^0.4.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "pdf-parse": "^1.1.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.3.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "bcryptjs": "^2.4.3",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "socket.io": "^4.7.2",
    "cron": "^2.4.4",
    "archiver": "^5.3.1",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/async-retry": "^1.4.5",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "@types/multer": "^1.4.7",
    "@types/lodash": "^4.14.198",
    "@types/validator": "^13.11.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.2",
    "@types/nodemailer": "^6.4.9",
    "@types/archiver": "^5.3.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swiftpayme/admin-service.git"
  },
  "bugs": {
    "url": "https://github.com/swiftpayme/admin-service/issues"
  },
  "homepage": "https://github.com/swiftpayme/admin-service#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}

