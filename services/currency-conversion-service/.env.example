# Server Configuration
NODE_ENV=development
PORT=3005
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/swiftpay_currency
MONGODB_OPTIONS=maxPoolSize=10&serverSelectionTimeoutMS=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PASSWORD_FILE=/run/secrets/redis_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_ISSUER=swiftpay-auth-service
JWT_REFRESH_THRESHOLD=3600

# External API Keys
EXCHANGERATESAPI_KEY=your-exchange-rates-api-key
GOLD_API_KEY=your-gold-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# External API URLs
FIAT_EXCHANGE_API_URL=https://api.exchangerate.host
CRYPTO_EXCHANGE_API_URL=https://api.coingecko.com/api/v3
PRECIOUS_METAL_API_URL=https://www.goldapi.io/api

# Service URLs
ACCOUNT_SERVICE_URL=http://localhost:3001
TRANSACTION_SERVICE_URL=http://localhost:3004
COMPLIANCE_SERVICE_URL=http://localhost:3003
ANALYTICS_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Service API Key
SERVICE_API_KEY=your-service-api-key-here

# Logging Configuration
LOG_LEVEL=info
FLUENTD_HOST=localhost
FLUENTD_PORT=24224

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CONVERSION_MAX=50
RATE_LIMIT_BATCH_MAX=10
RATE_LIMIT_ADMIN_MAX=1000

# Cache Configuration
CACHE_TTL_SECONDS=300
RATE_UPDATE_INTERVAL_SECONDS=300

# HTTP Client Configuration
HTTP_TIMEOUT=5000
HTTP_MAX_RETRIES=3
HTTP_RETRY_DELAY=1000
EXTERNAL_API_TIMEOUT_MS=5000
EXTERNAL_API_RETRIES=3

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Currency Configuration
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD,CHF,CNY,BTC,ETH,XAU,XAG
DEFAULT_BASE_CURRENCY=USD

# Conversion Limits
MAX_CONVERSION_AMOUNT=1000000
MAX_BATCH_SIZE=100
MIN_CONVERSION_AMOUNT=0.01

# Rate Update Configuration
RATE_UPDATE_BATCH_SIZE=50
RATE_UPDATE_MAX_RETRIES=3

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=0.5
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Precious Metals Configuration
PRECIOUS_METALS_ENABLED=true
PRECIOUS_METALS_UPDATE_INTERVAL=600

# Cryptocurrency Configuration
CRYPTO_ENABLED=true
CRYPTO_UPDATE_INTERVAL=300

# Historical Data Configuration
HISTORICAL_DATA_ENABLED=true
HISTORICAL_DATA_RETENTION_DAYS=365

# Compliance Configuration
COMPLIANCE_CHECK_ENABLED=true
LARGE_CONVERSION_THRESHOLD=10000
COMPLIANCE_REPORTING_ENABLED=true

# Analytics Configuration
ANALYTICS_ENABLED=true
CONVERSION_TRACKING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Development
DEBUG=swiftpay:*

