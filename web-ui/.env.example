# SwiftPayMe Web UI Environment Configuration

# API Configuration
VITE_API_BASE_URL=https://api.swiftpayme.com/api
VITE_WS_URL=wss://api.swiftpayme.com/ws
VITE_DOMAIN=swiftpayme.com

# Application Configuration
VITE_APP_NAME=SwiftPayMe
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Asset Deposit and Cryptocurrency Trading Platform

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_BITCOIN_WALLET=true
VITE_ENABLE_ASSET_DEPOSIT=true
VITE_ENABLE_MULTI_CURRENCY=true

# Security Configuration
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# Payment Configuration
VITE_SUPPORTED_CURRENCIES=USD,EUR,GBP
VITE_SUPPORTED_ASSETS=gold,silver,diamond,platinum
VITE_MIN_DEPOSIT_AMOUNT=100
VITE_MAX_DEPOSIT_AMOUNT=1000000

# Bitcoin Configuration
VITE_BITCOIN_NETWORK=mainnet
VITE_BITCOIN_EXPLORER_URL=https://blockstream.info
VITE_ENABLE_BITCOIN_TESTNET=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=

# Development Configuration
VITE_ENABLE_DEBUG=false
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=false

# External Services
VITE_GOOGLE_MAPS_API_KEY=
VITE_RECAPTCHA_SITE_KEY=
VITE_STRIPE_PUBLISHABLE_KEY=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
VITE_UPLOAD_ENDPOINT=/api/upload

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_VAPID_PUBLIC_KEY=
VITE_NOTIFICATION_SOUND=true

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_ENABLE_SERVICE_WORKER=true

# Social Login
VITE_ENABLE_GOOGLE_LOGIN=false
VITE_GOOGLE_CLIENT_ID=
VITE_ENABLE_FACEBOOK_LOGIN=false
VITE_FACEBOOK_APP_ID=

# Compliance
VITE_ENABLE_KYC=true
VITE_ENABLE_AML=true
VITE_PRIVACY_POLICY_URL=https://swiftpayme.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://swiftpayme.com/terms
